<div class="container">
  <div class="row">
    <br />
    <div class="col-sm-12">
      <%= form_tag(public_results_path, :method => "get", :class => "form-inline") do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], placeholder: "Clave única", class: "form-control" %>
        </div>
        <button type="submit" class="btn btn-default">Buscar</button>
      <% end %>
    </div>
  </div>
  <br />
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <th>Clave Única</th>
        <th>Email</th>
        <th>Puntos</th>
      </thead>

      <tbody>
        <% if @students.count > 0 %>
          <% @students.each do |student| %>
            <tr>
              <td><%= link_to student.clave_unica, student_path(student.id) %></td>
              <td><%= student.email %></td>
              <td><%= student.points %></td>
            </tr>
          <% end %>
        <% else %>
          <div class="alert alert-danger">
            <p>No se encontraron resultados</p>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

